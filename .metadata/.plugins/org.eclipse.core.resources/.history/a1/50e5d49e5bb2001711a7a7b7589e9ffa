package be.pxl.h5.oef24;

import java.util.Scanner;

public class H5Opdr24 {

	public static void main(String[] args) {
		Scanner keyboard = new Scanner(System.in);

		
		
		keyboard.close();
	}
	
	public static double prijsFilm(int rating, double leeftijd) {
		double prijs;
		
		while (rating < 1 || rating > 5) {
			switch (rating) {
			case 1:
				prijs = 3;
				break;
			case (3 | 2):
				prijs = 3.75;
				break;
			case (4 | 5):
				prijs = 4.5;
				break;
			default:
				System.out.println("Foutieve ingave.");
				break;
			}
		}
		if (leeftijd > 10) {
			prijs = prijs - 0.5;
		}
		
		return prijs;
	}
	
public static double prijsTekenfilm(int rating, double speeltijd) {
		double prijs;
		
		prijs = speeltijd * 0.5;
		
		return prijs;
	}
}