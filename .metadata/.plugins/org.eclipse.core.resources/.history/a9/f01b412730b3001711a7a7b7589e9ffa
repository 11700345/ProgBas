package be.pxl.h5.oef25;

public class H5Oef25 {

	public static void main(String[] args) {
		

	}

	public static double berekeningBmi(double lengte, double gewicht) {
		double bmi = gewicht / (lengte * lengte);		
		return bmi;
	}
	
	public static void printBmi (double bmi) {
		String bmiGezondheid;
		
		if (bmi < 18) {
			bmiGezondheid = "ondergewicht";
		} else {
			if (bmi < 25) {
				bmiGezondheid = "normaal gewicht";
			} else {
				if (bmi < 30) {
					bmiGezondheid = "neiging tot overgewwicht";
				} else {
					if (bmi < 40) {
						bmiGezondheid = "zwaarlijvigheid (obesitas)";
					} else {
						bmiGezondheid = "ernstige zwaarlijvigheid";
					}
				}
			}
		}
		
		
	}
	
}
